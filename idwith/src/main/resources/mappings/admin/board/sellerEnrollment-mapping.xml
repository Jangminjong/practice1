<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="SellerDAO">
 	<resultMap type="sellerVO" id="sellerResult">
 		<result property="seller_code" column="seller_code"/>
 		<result property="store_name" column="store_name"/>
 		<result property="seller_sellno" column="seller_sellno"/>
 		<!-- <result property="seller_sellno_img" column="seller_sellno_img"/> -->
 		<result property="user_id" column="user_id"/>
 	</resultMap>
 	<insert id="insertSeller" parameterType="sellerVO">
 		INSERT INTO seller (seller_code, store_name, seller_sellno, user_id)
 		VALUES(#{seller_code}, #{store_name}, #{seller_sellno}, #{user_id})
 	</insert>
 	
 	<!-- 이미 작가에 등록이 되어있는지 확인 -->
 	<select id="sellerEnCheck" resultMap="sellerResult">
 		select * from seller where user_id=#{user_id}
 	</select>
 	
 	<!-- 작가코드로 작가 조회 -->
 	<select id="getSeller" resultType="sellerVO">
 		select * from seller where seller_code = #{order_detail_seller}
 	</select>
 	
 	<select id="getClientCount" resultType="_int">
 	 	select count(*) from client
 	</select>
 	
 	<select id="getSellerCount" resultType="_int">
 		select count(*) from seller where seller_status != 2
 	</select>
 	
</mapper>